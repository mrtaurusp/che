.che-label-container
  padding 16px 0
  border-bottom 1px solid $list-separator-color

  &:last-child
    border-bottom none

  .che-label-container-label
    min-width 280px
    width 280px

  .che-label-container-label-name
    color $primary-color
    margin-right 10px

  .che-label-container-description
    color $disabled-color
    font-size 10px
    margin-top 5px

  .che-label-container-divider
    border-bottom 1px solid $list-separator-color
    margin-top 26px
